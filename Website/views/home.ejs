<!doctype html>

<html lang="en">

<head>
  <meta charset="utf-8">
  <link rel="icon" href="img/favicon.ico?v=1.1" type="image/vnd.microsoft.icon">
  <link rel="stylesheet" href="style/homestyle.css" type="text/css">
  <title>Greyhound Admin</title>
</head>

<body>
  <div class="topnav">
    <a id="homeClick" class="active" href="#">Items</a>
    <a id="eventClick" class="inactive" href="#">Event</a>
    <a id="adminClick" class="inactive" href="#">Admin</a>
    <a id="winnersClick" class="inactive" href="#">Winners</a>
    <a id="aboutClick" class="inactive" href="#">About</a>
  </div>
  <div class="mainview">
    <div id="home">
      <center>
        <h1>Items</h1>
        <button onclick="add()">Add</button>
        <button onclick="del()">Delete</button>
        <button onclick="edit()">Edit</button>
      </center>
      <table style="width:100%">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Min Increment</th>
          <th>Tags</th>
          <th>Highest Bid</th>
          <th>Highest Bidder</th>
          <th>Image</th>
        </tr>
        <% dataItem.forEach(function(dataItem){ %>
        <tr>
          <td><%= dataItem.id %></td>
          <td><%= dataItem.title %></td>
          <td><%= dataItem.description %></td>
          <td><%= dataItem.minInc %></td>
          <td><%= dataItem.tags %></td>
          <td><%= dataItem.currentHighestBid %></td>
          <td><%= dataItem.currentHighestBidder %></td>
          <td><%= dataItem.image %></td>
        </tr>
        <% })%>
      </table>
    </div>
    <div id="event" style="display:none;">
    <center>
      <h1>Event</h1>
      <button onclick="del()">Delete</button>
      <button onclick="edit()">Edit</button>
    </center>
      <table style="width:100%">
        <tr>
          <th>Description</th>
          <th>Start</th>
          <th>End</th>
          <th>Image</th>
        </tr>
        <% dataEvent.forEach(function(dataEvent){ %>
        <tr>
          <td><%= dataEvent.description %></td>
          <td><%= dataEvent.start %></td>
          <td><%= dataEvent.end %></td>
          <td><%= dataEvent.image %></td>
        </tr>
        <% })%>
      </table>
    </div>
    <div id="admin" style="display:none;">
      <center>
        <h1>Admins</h1>
        <button onclick="add()">Add</button>
        <button onclick="del()">Delete</button>
        <button onclick="edit()">Edit</button>
      </center>
      <table style="width:100%">
        <tr>
          <th>ID</th>
          <th>username</th>
          <th>password</th>
          <th>email</th>
          <th>created</th>
          <th>modified</th>
        </tr>
        <% dataAdmin.forEach(function(dataAdmin){ %>
          <tr>
            <td><%= dataAdmin.id %></td>
            <td><%= dataAdmin.username %></td>
            <td><%= dataAdmin.password %></td>
            <td><%= dataAdmin.email %></td>
            <td><%= dataAdmin.created %></td>
            <td><%= dataAdmin.modified%></td>
          </tr>
          <% })%>
      </table>
    </div>
    <div id="winners" style="display:none;">
      <center>
      <h1>Winners</h1>
      <table style="width:100%">
        <tr>
          <th>ID</th>
          <th>FirstName</th>
          <th>LastName</th>
          <th>Email</th>
          <th>Item</th>
        </tr>
        <% dataWin.forEach(function(dataWin){ %>
          <tr>
            <td><%= dataWin.id %></td>
            <td><%= dataWin.FirstName %></td>
            <td><%= dataWin.LastName %></td>
            <td><%= dataWin.Email %></td>
            <td><%= dataWin.ItemsBidOn %></td>
          </tr>
          <% })%>
      </table>
      </center>
    </div>
    <div id="about" style="display:none;">
      <center>
      <h1>About Team JAJEIMO</h1>
      <img src="img/egg.png" alt="Italian Trulli">
      <h2>Members</h2>
      <p>Javon Kitson</p>
      <p>Jennifer Moutenot</p>
      <p>Ian Leppo</p>
      <p>Mollie Morrow</p>
      </center>
    </div>
    <div id="add" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <p>ADD</p>
      </div>
    
    </div>
    <div id="edit" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <p>EDIT</p>
      </div>
    
    </div>
    <div id="delete" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <p>DELETE</p>
      </div>
    
    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="js/scripts.js"></script>
</body>

</html>