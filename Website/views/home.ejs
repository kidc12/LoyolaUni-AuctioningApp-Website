  <div class="topnav">
    <a id="homeClick" class="active" href="#">Items</a>
    <a id="adminClick" href="#">Admin</a>
    <a id="aboutClick" href="#">About</a>
  </div>
  <div class="mainview">
    <div id="home">
      <center>
        <h1>Items</h1>
        <button onclick="myFunction()">Add</button>
        <button onclick="myFunction()">Delete</button>
        <button onclick="myFunction()">Edit</button>
      </center>
      <table style="width:100%">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Min Increment</th>
          <th>Tags</th>
          <th>Highest Bid</th>
          <th>Highest Bidder</th>
          <th>Image</th>
        </tr>
        <% dataItem.forEach(function(dataItem){ %>
        <tr>
          <td><%= dataItem.id %></td>
          <td><%= dataItem.title %></td>
          <td><%= dataItem.description %></td>
          <td><%= dataItem.minInc %></td>
          <td><%= dataItem.tags %></td>
          <td><%= dataItem.currentHighestBid %></td>
          <td><%= dataItem.currentHighestBidder %></td>
          <td><%= dataItem.image %></td>
        </tr>
        <% })%>
      </table>
    </div>
    <div id="admin" style="display:none;">
      <center>
        <h1>Admins</h1>
        <button onclick="myFunction()">Add</button>
        <button onclick="myFunction()">Delete</button>
        <button onclick="myFunction()">Edit</button>
      </center>
      <table style="width:100%">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Min Increment</th>
          <th>Tags</th>
          <th>Highest Bid</th>
          <th>Highest Bidder</th>
          <th>Image</th>
        </tr>

      </table>
    </div>
    <div id="about" style="display:none;">
      <h1>LOGGED IN ABOUT</h1>
    </div>


    <!-- </div> -->
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="js/scripts.js"></script>
</body>

</html>