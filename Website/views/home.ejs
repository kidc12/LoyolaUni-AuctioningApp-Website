<!doctype html>

<html lang="en">

<head>
  <meta charset="utf-8">
  <link rel="icon" href="img/favicon.ico?v=1.1" type="image/vnd.microsoft.icon">
  <link rel="stylesheet" href="style/homestyle.css" type="text/css">
  <title>Greyhound Admin</title>
</head>

<body>
  <div class="topnav">
    <a id="homeClick" class="active" href="#">Items</a>
    <a id="eventClick" class="inactive" href="#">Event</a>
    <a id="adminClick" class="inactive" href="#">Admin</a>
    <a id="winnersClick" class="inactive" href="#">Winners</a>
    <a id="aboutClick" class="inactive" href="#">About</a>
  </div>
  <div class="mainview">
    <div id="home">
      <center>
        <h1>Items</h1>
        <button onclick="add()">Add</button>
        <button onclick="del()">Delete</button>
        <button onclick="edit()">Edit</button>
      </center>
      <table style="width:100%">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Min Increment</th>
          <th>Tags</th>
          <th>Highest Bid</th>
          <th>Highest Bidder</th>
          <th>Image</th>
        </tr>
        <% dataItem.forEach(function(dataItem){ %>
        <tr>
          <td><%= dataItem.id %></td>
          <td><%= dataItem.title %></td>
          <td><%= dataItem.description %></td>
          <td><%= dataItem.minInc %></td>
          <td><%= dataItem.tags %></td>
          <td><%= dataItem.currentHighestBid %></td>
          <td><%= dataItem.currentHighestBidder %></td>
          <td><img src="/img/<%= dataItem.id %>.png" /></td>
        </tr>
        <% })%>
      </table>
    </div>
    <div id="event" style="display:none;">
      <center>
        <h1>Event</h1>
        <button onclick="delEvent()">Delete</button>
        <button onclick="editEvent()">Edit</button>
      </center>
      <table style="width:100%">
        <tr>
          <th>Description</th>
          <th>Start</th>
          <th>End</th>
          <th>Image</th>
        </tr>
        <% dataEvent.forEach(function(dataEvent){ %>
        <tr>
          <td><%= dataEvent.description %></td>
          <td><%= dataEvent.start %></td>
          <td><%= dataEvent.end %></td>
          <!-- <td><%= dataEvent.image %></td> -->
          <td><img src="/img/event.png" /></td>
        </tr>
        <% })%>
      </table>
    </div>
    <div id="admin" style="display:none;">
      <center>
        <h1>Admins</h1>
        <button onclick="addAdmin()">Add</button>
        <button onclick="delAdmin()">Delete</button>
        <button onclick="editAdmin()">Edit</button>
      </center>
      <table style="width:100%">
        <tr>
          <th>ID</th>
          <th>username</th>
          <th>email</th>
          <th>created</th>
          <th>modified</th>
        </tr>
        <% dataAdmin.forEach(function(dataAdmin){ %>
        <tr>
          <td><%= dataAdmin.id %></td>
          <td><%= dataAdmin.username %></td>
          <td><%= dataAdmin.email %></td>
          <td><%= dataAdmin.created %></td>
          <td><%= dataAdmin.modified%></td>
        </tr>
        <% })%>
      </table>
    </div>
    <div id="winners" style="display:none;">
      <center>
        <h1>Winners</h1>
        <table style="width:100%">
          <tr>
            <th>ID</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Item</th>
          </tr>
          <%if(typeof dataWin !== 'undefined') { %>
            <% dataWin.forEach(function(dataWin){ %>
              <tr>
                <td><%= dataWin.id %></td>
                <td><%= dataWin.FirstName %></td>
                <td><%= dataWin.LastName %></td>
                <td><%= dataWin.Email %></td>
                <td><%= dataWin.ItemsBidOn %></td>
              </tr>
            <% })%>
          <% }%>
        </table>
      </center>
    </div>
    <div id="about" style="display:none;">
      <center>
        <h1>About Team JAJEIMO</h1>
        <img src="img/egg.png" alt="Italian Trulli">
        <h2>Members</h2>
        <p>Javon Kitson</p>
        <p>Jennifer Moutenot</p>
        <p>Ian Leppo</p>
        <p>Mollie Morrow</p>
      </center>
    </div>
    <div id="add" class="modal">
      <div class="modal-content">
        <center><h1>ADD</h1></center>
        <p>Title</p> <input type="text" name="title"><br>
        <p>Description</p> <input type="text" name="description" ><br>
        <p>Min Increment</p> <input type="number" name="minInc" ><br>
        <p>Tags</p> <input type="text" name="Tags" ><br>
        <p>Image</p> <input type="file" name="img" >
        <br><br>
        <input type="submit" value="Submit">
      </div>
    </div>
    
    <form id="edit" class="modal">
      <!-- <form id="edit" class="modal" action="welcome.php"> -->
      <div class="modal-content">
        <center><h1>EDIT</h1></center>
        <p>Title</p> <input type="text" name="title"><br>
        <p>Description</p> <input type="text" name="description" ><br>
        <p>Image</p> <input type="file" name="img" >
        <br><br>
        <input type="submit" value="Submit">
      </div>
    </form>

    <form id="delete" class="modal">
      <div class="modal-content">
        <center><h1>DELETE</h1></center>
        <center><p>ID</p> <input type="number" name="ID" ></center><br>
        <center> <input type="submit" value="Submit"></center>
      </div>
    </form>

    <form id="eventDelete" class="modal">
      <div class="modal-content">
        <center><h1>Are you sure you want to delete the event?</h1></center>
        <center> <input type="submit" value="Yes"></center>
      </div>
    </form>

    <form id="eventEdit" class="modal">
      <div class="modal-content">
        <center><h1>EDIT</h1></center>
        <p>Description</p> <input type="text" name="description" ><br>
        <p>End</p> <input type="date" name="date" ><br>
        <p>Image</p> <input type="file" name="img" >
        <br><br>
        <input type="submit" value="Submit">
      </div>
    </form>

    <form id="adminAdd" class="modal">
      <div class="modal-content">
        <center><h1>ADD</h1></center>
        <p>Username</p> <input type="text" name="username"><br>
        <p>Email</p> <input type="email" name="email" ><br>
        <p>Password</p> <input type="password" name="password" ><br>
        <br><br>
        <input type="submit" value="Submit">
      </div>
    </form>

    <form id="adminEdit" class="modal">
      <div class="modal-content">
        <center><h1>EDIT</h1></center>
        <p>Username</p> <input type="text" name="username"><br>
        <p>Email</p> <input type="text" name="description" ><br>
        <p>Password</p> <input type="password" name="password" ><br>
        <br><br>
        <input type="submit" value="Submit">
      </div>
    </form>

    <form id="adminDelete" class="modal">
      <div class="modal-content">
        <center><h1>DELETE</h1></center>
        <center><p>ID</p> <input type="number" name="ID" ></center><br>
        <center> <input type="submit" value="Submit"></center>
      </div>
    </form>

    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="js/scripts.js"></script>
</body>

</html>